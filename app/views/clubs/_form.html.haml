= simple_form_for([@university, @club]) do |f|
  = f.error_notification

  .form-inputs
    = f.input :image, label: "Logo"
    = f.input :name
    = f.input :private
    = f.input :category, as: :category 
    = f.input :description

  .form-actions
    = f.button :submit, class: 'btn btn-success'
