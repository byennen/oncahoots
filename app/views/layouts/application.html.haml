!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= content_for?(:title) ? yield(:title) : "Cahoots Connect".html_safe
    %meta{:content => content_for?(:description) ? yield(:description) : "Cahoots Connect", :name => "description"}
    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    = javascript_include_tag "https://js.stripe.com/v1/"
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)
  %body
    / .container-full
    /   .row
    /     = render 'layouts/navigation'
    /     .no-margin.col-md-6
    /       = yield :page_title
    /       = yield
    /     .no-margin.col-md-4
    /       = render 'shared/search'
    /       = yield :right_side
    - id = controller_name
    - id = "college" if id=='universities'
    - id = "network" if id=='profiles'
    .container-full{:id => "#{id}"}
      .row
        = render 'layouts/navigation'
        .col-md-10.no-padding
          .row
            .col-md-7.no-padding.title
              = yield :page_title
            .col-md-5.no-padding
              = render 'shared/search'
          - if @full_page == true
            .row
              .col-md-12.no-padding
                = render 'layouts/messages'
                = yield :full_page
          - else
            .row
              = render 'layouts/messages'
              .col-md-7.no-padding
                = yield :left_side
              .col-md-5.no-padding
                = yield :right_side
