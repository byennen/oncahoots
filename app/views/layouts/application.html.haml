!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= content_for?(:title) ? yield(:title) : "::&gt; Cahoots Connect &lt;::".html_safe
    %meta{:content => content_for?(:description) ? yield(:description) : "Cahoots Connect", :name => "description"}
    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
    <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)

  %body{:class => "#{controller_name} #{action_name}"}
    .container-fluid
      %header
        =# render 'layouts/search'
        = render 'layouts/navigation'
        =# yield(:header)
        .row-fluid.span12.no-lmar
          .container
            .span2
              = render partial: "layouts/left_menu"
            .span10
              .bg-image3
                .offset9
                  %button.btn.btn2{name: 'btn', style: "margin-right: 10px;"}
                    %i
                      = image_tag('search-icon.png')
                  %input.field{name: 'text', type: 'text'}
                  = link_to "Advanced", search_path, class: 'advance'
                = yield(:header)
      .seps
      = yield
      = render 'layouts/footer'