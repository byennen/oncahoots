!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= content_for?(:title) ? yield(:title) : "::&gt; Cahoots Connect &lt;::".html_safe
    %meta{:content => content_for?(:description) ? yield(:description) : "Cahoots Connect", :name => "description"}
    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
    <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)

  %body
    = yield :top_background
    .container-fluid
      %header
        = render 'layouts/search'
        = render 'layouts/nav_without_bg'
        .row-fluid
          .container
            .span2
              .left-menu= yield(:left_menu)
            .span10
              = yield
        = yield(:content_bottom)
   
      .row-fluid
        .container
          .span12
            .seperator
      = render 'layouts/footer'